<html>
<head><link rel="stylesheet" type="text/css" href="/css/home.css">
		 <script type="text/javascript" src="js/app.js"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
 </head>
<body>
	<!-- Individual User  -->
	<p id="user_id" style="display: none"><%= user.id %></p>
	<h4 id="users-title"><%= user.username %>'s dogs</h1>
	
		<main>
		 
			<div id="control-panel">
				<!-- Link to all Dogs -->
					<a href="/dogs"><p>All dogs</p></a>
				<!-- 	Link back to users -->
				
					

					<% if (usertrue)  { %>

						<a href="/users/logout"><p>Logout</p></a>
					<!-- Allow adding of new dog for user -->
		                <a href="/home"><p>Back to home</p></a>
						<!-- A form post for each user to for newdog -->
						<form action="/users/<%= user.id %>/newdog" method="POST">
							<input type="text" name="name" placeholder="name">
							<input type="text" name="breed" placeholder="breed">
							<input type="text" name="age" placeholder="age in months">
							<input type="text" name="timeinshelter" placeholder="Months at shelter">
							<input type="text" name="size" placeholder="Size">
							<input type="text" name="home" placeholder="status">
							<input type="text" name="status" placeholder="Status">
							<input type="text" name="img" placeholder="Image">

							<input type="submit">				
						</form>
					<% } %>
			</div>
						<!-- Div showing each dog of user -->
				
						<% for (var i=0; i < user.dogs.length; i++) { %>
							<div class="dog">
								<p><%= user.dogs[i].name %></p>
								
								   <p>
								      <span class = 'dogclass'>Name: </span><%=user.dogs[i].name%><br>
								     <span class = 'dogclass'></span><%=user.dogs[i].img%><br>
								     <a href="<%= user.dogs[i].dogs%>"> <img id="dogpic" img src="<%= user.dogs[i].img %>"></a>
								      Breed: <%=user.dogs[i].breed%><br>
								      <span class='dogclass'>Age (months): </span><%=user.dogs[i].age%><br>
								      <span class='dogclass'>Size: </span><%=user.dogs[i].size%><br>
								 	  <span class='dogclass'>Date Posted: </span><%=user.dogs[i].postingdate%><br>
								 	  <span class='dogclass'>Status: </span><%=user.dogs[i].home%><br>
								  		 
								    </p>
						 
						<% } %>
					 
					<!-- Option to delete user -->
					<% if (usertrue) { %> 
						<form action="/users/<%= user.id %>" method="POST">
							<input type="hidden" name="_method" value="DELETE">
							<button id="delete-button">Delete Self</button>
						<form action="/users/<%= user.id %>" method="POST">
							<input type="hidden" name="_method" value="PUT">
							<button id="delete-button">EDIT Self</button>
						</form>

					<% } %>
			 
		</main>
	 

</body>
</html>